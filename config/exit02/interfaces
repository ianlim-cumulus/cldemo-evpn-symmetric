# The loopback network interface
auto lo
iface lo inet loopback
  address 10.0.0.42/32

# The primary network interface

auto eth0
iface eth0 inet dhcp
    vrf mgmt

auto vrf1
iface vrf1
    vrf-table auto

auto mgmt
iface mgmt
     address 127.0.0.1/8
     vrf-table auto

auto bridge 
iface bridge
   bridge-vlan-aware yes
   bridge-ports vxlan4001

auto vlan4001
iface vlan4001
    vlan-id 4001
    vlan-raw-device bridge
    vrf vrf1

auto swp44
iface swp44
      vrf vrf1

auto swp51
iface swp51
  mtu 9216

auto swp52
iface swp52
  mtu 9216

auto vxlan4001
iface vxlan4001
    vxlan-id 104001
    vxlan-local-tunnelip 10.0.0.42
    bridge-learning off
    bridge-access 4001


